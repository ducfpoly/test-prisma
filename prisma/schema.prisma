model Employee {
  id               Int           @id @default(autoincrement())
  first_name       String           @db.VarChar(30)
  last_name        String           @db.VarChar(30)
  email            String           @unique
  phone            String
  created_at       DateTime         @default(now())
  updated_at       DateTime         @updatedAt
  image_url        String
  department       Department       @relation(fields: [department_id], references: [id])
  department_id    Int
  employee_details Employee_Detail?
  manager_id       Int          @default(autoincrement())
  // user User @relation(fields: [user_id], references: [id])
  // user_id Int @unique
}

model Employee_Detail {
  id          Int   @id @default(autoincrement())
  position    String   @db.VarChar(30)
  cccd        String   @db.VarChar(30)
  birthdate   DateTime
  salary      String
  address     String
  employee    Employee @relation(fields: [employee_id], references: [id])
  employee_id Int   @unique
}

model Department {
  id              Int     @id @default(autoincrement())
  department_name String     @db.VarChar(255)
  employees       Employee[]
}

model User {
  id         Int      @id @default(autoincrement())
  fullname   String?     @db.VarChar(255)
  username   String?     @db.VarChar(255)
  password   String?     @db.VarChar(50)
  avatar     String?     @db.VarChar(255)
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  phone      Int?
  email      String @unique
//   provider   String
  role       Int         @default(0)
  addresses  Address[]
  is_show Show @default(Show)
  // post_user  Post_User[]
  post Post[]
  // employees Employee?
  comment Comment[]
  collection Collection[]
}

model Address {
  id      Int @id @default(autoincrement())
  country String @db.VarChar(50)
  user    User   @relation(fields: [user_id], references: [id])
  user_id Int
}

enum Show {
  Show
  Hidden
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String      @db.VarChar(150)
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
  content        String
  thumbnail       String      @db.VarChar(255)
  // post_status    Post_Status @relation(fields: [post_status_id], references: [id])
  // post_status_id Int
  post_type      Post_Type   @relation(fields: [post_type_id], references: [id])
  post_type_id   Int
  slug String   @unique
  // post_user      Post_User[]
  views Int      @default(0)
  is_show Show @default(Show)
  // post_date DateTime?
  user User @relation(fields: [author_id], references: [id])
  author_id Int @unique
  comment_count Int @default(0)
  comment Comment[]
  post_collection Post_Collection[]
}

